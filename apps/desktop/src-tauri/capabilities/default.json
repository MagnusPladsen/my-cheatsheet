{
  "$schema": "https://raw.githubusercontent.com/nicoulaj/tauri/refs/heads/dev/crates/tauri-schema-generator/schemas/config.schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$CONFIG/**" },
        { "path": "$APPDATA/**" }
      ]
    }
  ]
}
